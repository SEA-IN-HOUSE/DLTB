<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:layout_gravity="center"
    tools:context=".DialogBoxPassengerType">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="SELECT PASSENGER TYPE"
        android:textSize="16sp"
        android:textColor="@color/darkgray"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/top_guide"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/top_guide"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <android.widget.Button
                android:id="@+id/passenger_fullfare"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:background="@drawable/light_blue_button"
                android:layout_marginStart="0dp"
                android:textStyle="bold"
                android:text="FULL FARE"
                android:textColor="@color/white"
                android:textSize="12sp"/>

            <android.widget.Button
                android:id="@+id/passenger_student"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:background="@drawable/light_blue_button"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:text="STUDENT"
                android:textColor="@color/white"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="55dp">

            <android.widget.Button
                android:id="@+id/passenger_senior_citizen"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:background="@drawable/light_blue_button"
                android:layout_marginStart="0dp"
                android:textStyle="bold"
                android:text="SENIOR CITIZEN"
                android:textColor="@color/white"
                android:textSize="12sp"/>

            <android.widget.Button
                android:id="@+id/passenger_pwd"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:background="@drawable/light_blue_button"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:text="PWD"
                android:textColor="@color/white"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="120dp"
            >

            <android.widget.Button
                android:id="@+id/okay_btn"
                android:layout_width="110dp"
                android:layout_height="28dp"
                android:layout_weight="20"
                android:background="@drawable/dark_blue_button_2"
                android:layout_marginStart="0dp"
                android:textStyle="bold"
                android:text="OKAY"
                android:textColor="@color/white"
                android:textSize="12sp"/>

            <android.widget.Button
                android:id="@+id/close_btn"
                android:layout_width="110dp"
                android:layout_height="28dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/dark_blue_button_2"
                android:text="CLOSE"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>